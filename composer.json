{
    "name": "tmazza/wirecard-subscriptions-sdk",
    "description": "Software Development Kit to simplify the use of Wirecard Subscriptions API.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tiago Mazzarollo",
            "email": "tmazza@pm.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "WirecardSubscription\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WirecardSubscription\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests/Unit",
        "fix": "./vendor/bin/phpcbf --standard=PSR1,PSR2,PSR12 --ignore=vendor .",
        "fix-inspect": "./vendor/bin/phpcs --standard=PSR1,PSR2,PSR12 --ignore=vendor ."
    },
    "require": {
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "3.*"
    }
}